{
  "name": "create-stern-config",
  "version": "1.0.0",
  "description": "CLI tool to setup ESLint and Prettier configuration for Stern projects",
  "type": "module",
  "bin": {
    "create-stern-config": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "bun build ./src/cli.ts --outfile ./dist/cli.js --target node --format esm",
    "dev": "bun run src/cli.ts",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "eslint",
    "prettier",
    "cli",
    "setup",
    "stern",
    "bun"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/create-stern-config.git"
  },
  "engines": {
    "node": ">=23.11.0"
  },
  "dependencies": {
    "@clack/prompts": "^0.9.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "bun-types": "^1.1.38",
    "typescript": "^5.7.3"
  }
}
